{
  "kind": "vpa",
  "flavor": "standard",
  "disabled": true,
  "metadata": {},
  "version": "1.0",
  "spec": {
    "version": "2.5.1",
    "namespace": "vpa-system",
    "create_namespace": true,
    "deployment": {
      "cleanup_on_fail": true,
      "wait": false,
      "atomic": false,
      "timeout": 600,
      "recreate_pods": false
    },
    "recommender": {
      "enabled": true,
      "storage": "prometheus",
      "size": {
        "cpu": "500m",
        "memory": "500Mi",
        "cpu_limits": "1500m",
        "memory_limits": "1500Mi"
      },
      "configuration": {}
    },
    "updater": {
      "enabled": false
    },
    "admission_controller": {
      "enabled": false
    },
    "helm_values": {}
  },
  "inputs": {
    "kubernetes_node_pool_details": {
      "resource_name": "aws-np",
      "resource_type": "kubernetes_node_pool"
    },
    "kubernetes_details": {
      "resource_name": "aws-cluster",
      "resource_type": "kubernetes_cluster"
    },
    "prometheus_details": {
      "resource_name": "aws-prom",
      "resource_type": "prometheus"
    }
  }
}